<html lang="en">
<head>
  <meta chaset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>kevpo | {{title}}</title>
  {%- set css -%}
    {% include "css/index.css" %}
    {% include "css/nav.css" %}
    {% include "css/cover.css" %}
    {% include "css/grid.css" %}
    {% include "css/books.css" %}
  {%- endset %}
