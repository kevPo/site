    {{ css | safe }}
  </style>
</head>
<body>
  <div class="content">
    <main>
      {{content | safe}}
    </main>
  </div>

  <script>
  let root = document.documentElement;

  function loadTheme() {
    const theme = sessionStorage.getItem('theme');

    if (theme === "christmas") {
      root.style.setProperty('--mainColor', "#EA4630");
      root.style.setProperty('--secondaryColor', "#146B3A");
      root.style.setProperty('--thirdaryColor', "#ffffff");
    }
    else {
      root.style.setProperty('--mainColor', "#0085ca");
      root.style.setProperty('--secondaryColor', "#000000");
      root.style.setProperty('--thirdaryColor', "#ffffff");
    }
  }

  window.onpaint = loadTheme();
  </script>
</body>
</html>